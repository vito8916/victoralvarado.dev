---
const {title} = Astro.props;
---
<span class="badge">
    <slot />
    {title}
</span>

<style>
    .badge {
        display: inline-flex;
        width: fit-content;
        align-items: center;
        gap: 0.5rem; /* gap-2 */
        border-radius: 0.375rem; /* rounded-md */
        border: 1px solid #2d2d2d; /* border-neutral-800 */
        background-color: #1a1a1a; /* bg-neutral-900 */
        padding: 0.25rem 0.5rem; /* px-2 py-1 */
        font-size: 0.75rem; /* text-xs */
        color: #a3a3a3;
    }
</style>
