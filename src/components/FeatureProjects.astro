---
import { featureProjects as defaultProjects, type FeatureProject } from '../data/featureProjects';

interface Props {
	projects?: FeatureProject[];
}

const { projects = [] } = Astro.props;

const displayProjects = projects.length > 0 ? projects : defaultProjects;
---

<section class="feature-projects">
	<h2 class="section-title">Featured Projects</h2>

	<div class="feature-projects__grid">
		{displayProjects.map((project) => (
			<article class="feature-projects__card">
				<div class="feature-projects__card-header">
					
					{project.externalUrl && (
						<a href={project.externalUrl} target="_blank" rel="noopener noreferrer" class="feature-projects__icon-link" aria-label="View project">
							<svg class="feature-projects__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="20" height="20">
								<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
								<polyline points="15 3 21 3 21 9"/>
								<line x1="10" y1="14" x2="21" y2="3"/>
							</svg>
						</a>
					)}
				</div>
				<h3 class="feature-projects__card-title">
					{project.githubUrl ? (
						<a href={project.githubUrl} target="_blank" rel="noopener noreferrer" class="feature-projects__title-link">
							<svg class="feature-projects__title-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
								<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
							</svg>
							{project.title}
						</a>
					) : (
						<span>{project.title}</span>
					)}
				</h3>
				<p class="feature-projects__card-description">{project.description}</p>
			</article>
		))}
	</div>
	<div class="feature-projects__cta">
		<a href="/projects" class="cta cta-secondary">View all projects â†’</a>
	</div>
</section>

<style>
	.feature-projects {
		border-radius: 0.5rem;
		margin: var(--spacing-l) 0;
	}

	.feature-projects__title {
		font-size: 1.75rem;
		font-weight: 700;
		color: #efefef;
		margin: 0 0 var(--spacing-l) 0;
	}

	.feature-projects__grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing);
	}

	.feature-projects__card {
		border: 1px dashed #555555;
		border-radius: 0.5rem;
		padding: var(--spacing);
		position: relative;
	}

	.feature-projects__card-header {
		position: absolute;
		top: var(--spacing);
		right: var(--spacing);
		display: flex;
		gap: 0.5rem;
		align-items: center;
	}

	.feature-projects__icon-link {
		color: var(--color-text);
		transition: color 0.2s ease, opacity 0.2s ease;
	}

	.feature-projects__icon-link:hover {
		color: var(--color-highlight);
		opacity: 0.9;
	}

	.feature-projects__icon {
		display: block;
	}

	.feature-projects__card-title {
		font-size: 1rem;
		font-weight: 600;
		color: var(--color-text);
		margin: 0 0 var(--spacing-s) 0;
		padding-right: 3rem;
	}

	.feature-projects__title-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--color-text);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.feature-projects__title-link:hover {
		color: var(--color-highlight);
	}

	.feature-projects__title-icon {
		flex-shrink: 0;
	}

	.feature-projects__card-description {
		font-size: 0.875rem;
		color: var(--color-text);
		line-height: 1.5;
		margin: 0;
	}

	.feature-projects__cta {
		margin-top: var(--spacing-l);
		text-align: left;
	}

	@media (max-width: 600px) {
		.feature-projects__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
