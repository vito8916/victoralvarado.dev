<style>
    .dock-menu {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        gap: 10px;
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        transition: all 0.3s ease;
        background-color: #333;
        padding: 10px;
        border-radius: 9999px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .dock-menu .item {
        text-decoration: none;
        transform: none;
        transition: all 0.4s ease;
    }

    .dock-menu .item .item-icon {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #fff;
        color: #333;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .dock-menu .item svg {
        width: 20px;
        height: 20px;
        fill: currentColor;
    }

    .dock-menu .item.active svg {
    fill: #00a651;
}

    .dock-menu .item:hover {
        margin: 0 10px;
        transform: scale(1.6) translateY(-10px);
        transition: all 0.3s ease;
    }

    .dock-menu .item:hover + .item {
        margin: 0 8px;
        transform: scale(1.2);
        transition: all 0.4s ease;
    }

    .dock-menu .item .item-tooltip {
        color: white;
        font-size: 10px;
        background-color: #333;
        border: 1px solid #333;
        border-radius: 4px;
        padding: 4px 8px;
        position: absolute;
        top: -40px;
        opacity: 0;
        transition: opacity 0.2s ease-in-out 0s;
        pointer-events: none;
        user-select: none;
    }
