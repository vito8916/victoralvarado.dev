
---
export interface Props {
    href: string;
    className?: string;
    ariaLabel?: string;
    title?: string;
    disabled?: boolean;
    isExternal?: boolean;
}
const { href, className, ariaLabel, title, disabled = false, isExternal } = Astro.props;
const att = isExternal ? { target: '_blank', rel: 'noopener' } : {}
---

<a
        href={disabled ? "#" : href}
        tabindex={disabled ? "-1" : "0"}
        class={`group ${className}`}
        aria-label={ariaLabel}
        title={title}
        aria-disabled={disabled}
        {...att}
>
    {title}
</a>

<style>
    a {
        @apply hover:text-skin-accent;
    }
</style>