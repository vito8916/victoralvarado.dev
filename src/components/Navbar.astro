---
import removeTrailingSlash from "../utils/removeTrailingSlash"

const pathname = removeTrailingSlash(Astro.url.pathname);
import {menu} from "../data/menu";
---

<div class="custom-navbar container">
    <a href={`mailto:victoralvarado@gmail.com`} class="hover:text-neutral-100" style="font-size: 24px;">
        VA
    </a>

    <nav role="navigation">
        <ul role="list" class="gap-2">
            {
                menu.map((item) => (
                    <li>
                        <a
                                href={item.href}
                                class:list={{
                                    ["hover:text-neutral-100"]: true,
                                    ["text-green-500"]: pathname === item.href,
                                }}>{item.label}</a
                        >
                    </li>
                ))
            }
        </ul>
    </nav>
</div>

<style>

    ul {
        display: flex;
        flex-direction: column;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    ul li {
        display: flex;
    }

    ul li:before {
        content: "•";
        margin-left: 0.5rem;
        margin-right: 0.5rem;
    }

    ul a {
        text-decoration: none;
    }

    .custom-navbar {
        font-size: 14px;
        margin-bottom: 5vw;
        z-index: 40; /* z-40 */
        display: flex; /* flex */
        width: 100%; /* w-full */
        flex-direction: column; /* flex-col */
        gap: 0.5rem; /* gap-2 */
    }

    @media (min-width: 768px) {
        .custom-navbar {
            flex-direction: row; /* md:flex-row */
            justify-content: space-between; /* md:justify-between */
        }
        ul {
            flex-direction: row;
        }
        ul li:before {
            content: "";
            margin-left: 0;
            margin-right: 0;
        }
        ul li:after {
            content: "•";
            margin-left: 0.5rem;
            margin-right: 0.5rem;
        }
        ul li:last-child:after {
            content: "";
        }
        ul li {
            display: inline;
        }
    }

    .flex {
        display: flex;
    }

    .flex-row {
        flex-direction: row;
    }

    .gap-2 {
        gap: 0.5rem;
    }

    .text-neutral-100 {
        color: #f5f5f5;
    }

    .text-green-500 {
        color: #10b981;
    }

    .hover-text-neutral-100:hover {
        color: #f5f5f5;
    }
</style>